<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bankbg2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <ImageView
            android:layout_width="@dimen/divide_30_dp"
            android:layout_height="@dimen/divide_30_dp"
            android:src="@drawable/bank_icon"
            android:id="@+id/iv_bank_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招商银行"
            android:id="@+id/tv_bank_name"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/iv_bank_icon"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单笔限额10万"
            android:id="@+id/tv_danbi"
            android:textColor="#FFBAB5"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单日限额100万"
            android:textColor="#FFBAB5"
            android:id="@+id/tv_danri"
            android:layout_below="@+id/tv_danbi"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** 9678"
            android:textSize="20sp"
            android:id="@+id/tv_bank_num"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           />

    </RelativeLayout>

</LinearLayout>